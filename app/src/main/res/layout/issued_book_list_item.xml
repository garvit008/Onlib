<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp"
        android:background="@color/material_cards"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:background="@color/material_cards">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/book"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/bookCoverIv"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookCoverIv"
                android:text="Book Name"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:id="@+id/bookName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookName"
                android:text="By Author name"
                android:textColor="@color/material_secondary_text_grey"
                android:textSize="14sp"
                android:textAlignment="center"
                android:id="@+id/bookAuthor"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookAuthor"
                android:text="Edition: "
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textAlignment="center"
                android:id="@+id/bookEdition"
                />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/bookEdition"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="10dp">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:orientation="vertical"
                 android:layout_marginLeft="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Issue Date"
                     android:textSize="18sp"
                     android:textColor="@color/text_white"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/material_secondary_text_grey"
                     android:text="date"
                     android:textSize="14sp"
                     android:id="@+id/issueDate"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:orientation="vertical"
                 android:layout_marginRight="10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Return Date"
                     android:textSize="18sp"
                     android:textColor="@color/text_white"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/material_secondary_text_grey"
                     android:text="date"
                     android:textSize="14sp"
                     android:id="@+id/returnDate"/>

             </LinearLayout>

         </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>